<resources>

    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="defaultBackground">@color/background</item>
        <item name="actionBarColor">@color/toolbar_color</item>
        <item name="actionBarColorInverse">@color/toolbar_color_inverse</item>
    </style>

    <style name="AppTheme.Base.NoActionBar" parent="Base.AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Base.NoActionBar"/>

</resources>
